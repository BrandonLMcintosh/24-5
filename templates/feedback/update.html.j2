{% extends "root/base.html.j2" %}

{% block title %}

    Update feedback

{% endblock title %}

{% block nav %}

<a href="/logout" class="btn btn-secondary">Logout</a>
<a href="{{request.referrer}}" class="btn btn-primary">Back / Cancel</a>

{% endblock nav %}

{% block form %}

    <form action="/feedback/{{feedback.id}}/update" method="POST">

        {{ form.hidden_tag() }}

        {% for field in form
            if field.widget.input_type != 'hidden' %}

            <div>
                {{field.label}}
                {{field}}

                {% for error in field.errors %}
                    {{error}}
                {% endfor %}
            </div>
        {% endfor %}
        <input type="submit" value="Update" class="btn btn-success">
    </form>

{% endblock form %}